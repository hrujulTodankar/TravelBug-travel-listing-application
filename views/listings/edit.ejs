<% layout("/layouts/boilerplate.ejs") -%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Create New listing</h3>
     <form method="post" action="/listings/<%= listing._id %>/edit?_method=put" novalidate class="needs-validation">
       <div class="mb-3">
        <label for="title" class-="form-label">Title</label>
        <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required>
         <div class="valid-feedback">Title looks good !</div>
        <div class="invalid-feedback">Please Enter Valid Title</div>
       </div>
       
       <div class="mb-3">
        <label for="desc" class-="form-label">Description</label>
        <textarea name="listing[desc]"  rows="5" cols="50"class="form-control" required>
        <%= listing.description %>
        </textarea>   
        <div class="valid-feedback">Description looks good !</div>
        <div class="invalid-feedback">Please Enter Valid Description</div>
       </div>
             
       <div class="mb-3">
        <label for="image" class-="form-label"  required>Image Url</label>
        <input type="text" name="listing[image.url]"class="form-control" value="<%= listing.image %>">
        <div class="valid-feedback">Image link looks good !</div>
        <div class="invalid-feedback">Please Enter Valid Image Link</div>
       </div>

       <div class="row">
        <div class="mb-3 col-4" >
        <label for="price" class-="form-label">Price</label>
        <input  name="listing[price]"class="form-control" value="<%= listing.price %>" required>
        <div class="valid-feedback">Price looks good !</div>
        <div class="invalid-feedback">Please Enter Valid Price</div>
       </div>
        
        <div class="mb-3 col-8" >
        <label for="location" class-="form-label">Location</label>
        <input type="text" name="listing[location]"class="form-control" value="<%= listing.location %>" required>
        <div class="invalid-feedback">Please Enter Valid Location</div>
         </div>
       </div>

        <div class="mb-3">
        <label for="country" class-="form-label">Country</label>
        <input type="text" name="listing[country]"class="form-control" value="<%= listing.country %>" required>
        <div class="invalid-feedback">Please Enter Valid Country</div>
        </div>
       
        <button class=" edit-btn btn-outline-dark mt-3">Edit</button>
    </form>
    </div>
</div>
</body>