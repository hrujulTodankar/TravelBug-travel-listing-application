<% layout("/layouts/boilerplate") -%>
<body>

  <style>
    #filters{
      display:flex;
      flex-wrap: wrap;
    }

    #filter{
      text-align: center;
      margin-right: 1rem;
      margin-top: 1rem;
      opacity: 0.5;
    }

    #filter:hover{
      opacity : 1;
      cursor:pointer ;
    }

    #filter p {
      font-size: small;
    }

    /* .tax-toggle {
      border: 1px solid black;
      border-radius: 1rem;
      height: 2.5rem;
      padding: 0.5rem;
      margin-top: 0.5rem;
      display: flex;
      align-items: center;
    } */
  </style>

  <div id="filters">
    <div id="filter">
      <div><i class="fa-regular fa-map"></i></div>
     <p>Map</p>
    </div>

    <div id="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>

    <div id="filter">
      <div><i class="fa-solid fa-house"></i></div>
      <p>Homes</p>
    </div>

    <div id="filter">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic Cities</p>
    </div>

    <div id="filter">
      <div><i class="fa-solid fa-umbrella-beach"></i></div>
      <p>Beaches</p>
    </div>

     <div id="filter">
      <div><i class="fa-solid fa-person-hiking"></i></div>
      <p>Hikes</p>
    </div>

    <div class="tax-toggle form-check-reverse form-switch">
      <div class="form-check form-switch form-check-reverse">
        <input class="form-check-input" type="checkbox" role="switch" id="switchCheckReverse">
        <label class="form-check-label" for="switchCheckReverse">Display total after taxes</label>
      </div>
    </div>
  </div>

    
  <!-- <h3 class="m-3">All Listings</h3> -->
<div class="row row-cols-lg-2 row-cols-md-2 row-cols-sm-2 mt-3">
     <%for(let listing of alllisting ){ %>
    <div class="card col " style="width: 10rem;">
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="..." style="height: 13rem;">
        <div class="card-img-overlay">
          <p class="card-title"><b><%= listing.title %></b></p>
        </div>
      <div class="card-body">
      <p class="card-title"><b><%= listing.title %></b></p>
      <p class="card-price" > &#x20b9; <%= listing.price.toLocaleString("en-IN") %> / night</p>
      <!-- <p class="card-text"><%= listing.description %></p> -->
    </div>
    </a>
</div>
<%}%>

</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    let taxSwitch = document.getElementById("switchCheckReverse");
    taxSwitch.addEventListener("click", () => {
      console.log("clicked");
    });
  });
</script>
</body>
